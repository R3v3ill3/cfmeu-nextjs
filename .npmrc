# Simplified Vercel-compatible pnpm v10+ configuration
# This approach uses only .npmrc (no conflicting workspace configs)

# Core pnpm v10 script approval - Vercel-compatible syntax
ignore-scripts=false
enable-pre-post-scripts=true

# Explicit approval for critical build dependencies
# Using only the packages that actually need build scripts
approved-packages[]=@tailwindcss/oxide
approved-packages[]=esbuild
approved-packages[]=puppeteer
approved-packages[]=sharp
approved-packages[]=@sparticuz/chromium