{
  "crons": [
    {
      "path": "/api/admin/refresh-views",
      "schedule": "0 2 * * *"
    }
  ],
  "ignoreCommand": "bash -c '[[ -z $VERCEL_GIT_PREVIOUS_SHA ]] || git diff --quiet $VERCEL_GIT_PREVIOUS_SHA $VERCEL_GIT_COMMIT_SHA -- . \":!railway_workers/**\" || exit 1'",
  "build": {
    "env": {
      "NPM_CONFIG_ENABLE_PRE_POST_SCRIPTS": "true",
      "NPM_CONFIG_BUILD_SCRIPTS": "true",
      "NPM_CONFIG_PRODUCTION": "false"
    }
  }
}
