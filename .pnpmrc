# Allow build scripts for specific dependencies (pnpm v10+)
# This is needed for puppeteer (web scraping), sharp (image processing), etc.
ignore-compatibility-db=true
enable-pre-post-scripts=true
# Enable all build scripts for these critical dependencies
only-built-dependencies[]=@tailwindcss/oxide
only-built-dependencies[]=esbuild
only-built-dependencies[]=puppeteer
only-built-dependencies[]=sharp
only-built-dependencies[]=unrs-resolver
only-built-dependencies[]=@sparticuz/chromium
